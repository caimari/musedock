{
  "name": "Default",
  "slug": "default",
  "version": "1.0.0",
  "author": "MuseDock Team",
  "description": "Tema por defecto de MuseDock",
  "screenshot": "screenshot.png",
  "layout": "layouts.app",
  "bootstrap": true,
  "customizable": true,
  "styles": [
    "/assets/themes/default/css/style.css"
  ],
  "scripts": [
    "/assets/themes/default/js/theme.js"
  ],
  "content_areas": [
    {
      "id": "nav",
      "name": "Navegación principal",
      "description": "Menú de navegación en la cabecera del sitio",
      "supports": ["menu"]
    },
    {
      "id": "footer1",
      "name": "Footer Columna 1",
      "description": "Primera columna del pie de página",
      "supports": ["menu", "widget"]
    },
    {
      "id": "footer2",
      "name": "Footer Columna 2",
      "description": "Segunda columna del pie de página",
      "supports": ["menu", "widget"]
    },
    {
      "id": "footer3",
      "name": "Footer Columna 3",
      "description": "Tercera columna del pie de página",
      "supports": ["menu", "widget"]
    },
    {
      "id": "sidebar",
      "name": "Barra lateral",
      "description": "Menú en la barra lateral",
      "supports": ["menu", "widget"]
    }
  ],
  "menu_areas": [
    {
      "id": "nav",
      "name": "Navegación principal",
      "description": "Menú de navegación en la cabecera del sitio"
    },
    {
      "id": "footer1",
      "name": "Footer Columna 1",
      "description": "Primera columna del pie de página"
    },
    {
      "id": "footer2",
      "name": "Footer Columna 2",
      "description": "Segunda columna del pie de página"
    },
    {
      "id": "footer3",
      "name": "Footer Columna 3",
      "description": "Tercera columna del pie de página"
    },
    {
      "id": "sidebar",
      "name": "Barra lateral",
      "description": "Menú en la barra lateral"
    }
  ],
  "customizable_options": {
    "topbar": {
      "type": "section",
      "label": "Barra superior (Top Bar)",
      "options": {
        "topbar_enabled": {
          "type": "toggle",
          "label": "Mostrar barra superior",
          "default": true
        },
        "topbar_show_address": {
          "type": "toggle",
          "label": "Mostrar dirección",
          "default": false,
          "description": "Si está desactivado, solo se mostrarán email y WhatsApp"
        },
        "topbar_show_email": {
          "type": "toggle",
          "label": "Mostrar email",
          "default": true
        },
        "topbar_show_whatsapp": {
          "type": "toggle",
          "label": "Mostrar WhatsApp",
          "default": true
        },
        "topbar_whatsapp_icon": {
          "type": "select",
          "label": "Icono de WhatsApp",
          "default": "whatsapp",
          "options": {
            "phone": "Teléfono",
            "whatsapp": "WhatsApp"
          },
          "description": "Icono a usar para el número de WhatsApp"
        },
        "topbar_bg_color": {
          "type": "color",
          "label": "Color de fondo",
          "default": "#1a2a40"
        },
        "topbar_text_color": {
          "type": "color",
          "label": "Color del texto",
          "default": "#ffffff"
        }
      }
    },
    "header": {
      "type": "section",
      "label": "Cabecera principal",
      "options": {
        "header_bg_color": {
          "type": "color",
          "label": "Color de fondo de la cabecera",
          "default": "#f8f9fa"
        },
        "header_sticky": {
          "type": "toggle",
          "label": "Cabecera fija (sticky)",
          "default": false,
          "description": "La cabecera se quedará fija al hacer scroll"
        },
        "header_cta_enabled": {
          "type": "toggle",
          "label": "Mostrar botón Call-to-Action",
          "default": false
        },
        "header_cta_text_es": {
          "type": "text",
          "label": "Texto del botón CTA (Español)",
          "default": "Iniciar sesión"
        },
        "header_cta_text_en": {
          "type": "text",
          "label": "Texto del botón CTA (English)",
          "default": "Login"
        },
        "header_cta_url": {
          "type": "text",
          "label": "Enlace del botón CTA",
          "default": "#",
          "placeholder": "https://ejemplo.com/inscripcion"
        },
        "header_cta_bg_color": {
          "type": "color",
          "label": "Color de fondo del botón CTA",
          "default": "#ff5e15"
        },
        "header_cta_text_color": {
          "type": "color",
          "label": "Color del texto del botón CTA",
          "default": "#ffffff"
        },
        "header_lang_selector_enabled": {
          "type": "toggle",
          "label": "Mostrar selector de idioma",
          "default": true
        }
      }
    },
    "footer": {
      "type": "section",
      "label": "Pie de página",
      "options": {
        "footer_bg_color": {
          "type": "color",
          "label": "Color de fondo del footer",
          "default": "#f8fafe"
        },
        "footer_text_color": {
          "type": "color",
          "label": "Color del texto del footer",
          "default": "#333333"
        },
        "footer_link_color": {
          "type": "color",
          "label": "Color de los enlaces del footer",
          "default": "#333333"
        },
        "footer_link_hover_color": {
          "type": "color",
          "label": "Color de los enlaces al pasar el ratón",
          "default": "#ff5e15"
        }
      }
    },
    "custom_code": {
      "type": "section",
      "label": "Código personalizado",
      "options": {
        "custom_css": {
          "type": "code",
          "language": "css",
          "label": "CSS personalizado",
          "description": "Añade aquí tu CSS personalizado. Usa !important para sobrescribir estilos del tema.",
          "default": "/* Ejemplos:\n.header-bottom {\n  background-color: #ff0000 !important;\n}\n\n.footer-area h4 {\n  color: #00ff00 !important;\n}\n*/\n"
        },
        "custom_js": {
          "type": "code",
          "language": "javascript",
          "label": "JavaScript personalizado",
          "description": "Añade aquí tu JavaScript personalizado. Se ejecutará cuando el documento esté listo.",
          "default": "/* Ejemplos:\ndocument.addEventListener('DOMContentLoaded', function() {\n  // Tu código aquí\n  console.log('JavaScript personalizado cargado');\n});\n*/\n"
        }
      }
    }
  }
}